<div class="container">
  <div class="p-3 mb-4 col-md-4 font-weight-bold bg-light text-dark"><%= @user.family_name %>さんのユーザー情報編集</div>
  <%= form_with model: @user, url: admin_user_path do |f| %>
  <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :family_name, "ユーザーID" %></div>
        <div class="col-lg-3"><%= @user.id %></div>
        <div class="col-lg-3"></div>
      </div>
    </div>
  
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :family_name, "氏名" %></div>
        <div class="col-lg-3"><%= f.text_field :family_name, autofocus: true, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :nickname, "ニックネーム" %></div>
        <div class="col-lg-3"><%= f.text_field :nickname, autofocus: true, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-lg-3"><%= f.email_field :email, autocomplete: "email", class: "form-control border-dark" %></div>
      </div>
    </div>
    
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :is_deleted, "ユーザーステータス" %></div>
        <div class="col-lg-3">
          <%= f.radio_button :is_deleted, false %><%= f.label :有効 %>
          <%= f.radio_button :is_deleted, true %><%= f.label :退会 %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= f.submit "変更を保存", class: 'btn btn-success', style: 'width:300px' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>