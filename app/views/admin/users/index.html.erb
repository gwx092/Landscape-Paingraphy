<div class='container'>
  <div class='row'>
    <div class="p-3 mb-2 bg-light text-dark">ユーザー一覧</div>
    <table class='table'>
      <thead>
        <tr>
          <th>ユーザーID</th>
          <th>氏名</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.family_name,admin_user_path(user) %></td>
            <td><%= user.nickname %></td>
            <td><%= user.email %></td>
            <td><% if user.is_deleted == false %>
              <strong class="text-success">有効</strong>
            <% else %>
              <strong class="text-secondary">無効</strong>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>