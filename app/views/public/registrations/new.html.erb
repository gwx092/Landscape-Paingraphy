<%= render "layouts/error_message" %>
<div class="container">
  <div class="p-3 mb-2 mt-4 col-md-2 font-weight-bold bg-light text-dark">新規登録</div>

  <%= form_with model: @user, url: user_registration_path do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :family_name, "氏名" %></div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3"><%= f.text_field :family_name, autocomplete: "family_name", placeholder: "風景太郎", class: "form-control border-dark" %></div>
      </div>
    </div>
    
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :nickname, "ニックネーム" %></div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3"><%= f.text_field :nickname, autocomplete: "nickname", placeholder: "フータロー", class: "form-control border-dark" %></div>
      </div>
    </div>
    
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3"><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3">
          <%= f.label :password, "パスワード" do %>
            <% if @minimum_password_length %>
              パスワード(<%= @minimum_password_length %> 文字以上)
            <% end %>
          <% end %>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3"><%= f.password_field :password, autocomplete: "new-password", class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3 mt-3 mb-5"><%= f.submit "新規登録", class: 'btn btn-success', style: 'width:160px' %></div>
      </div>
    </div>
  <% end %>

      <div class="p-3 mb-2 col-md-2 font-weight-bold bg-light text-dark">既に登録済みの方</div>
      <div>
        <p><%= link_to "こちら", new_user_session_path %>からログインしてください。</p>
      </div>
</div>