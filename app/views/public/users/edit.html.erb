<div class="container">
  <div class="p-3 mb-2 col-md-2 font-weight-bold bg-light text-dark">会員情報編集</div>
  <%= form_with model: @user, url: user_path do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :profile_image, "プロフィール画像" %></div>
        <div class="col-lg-3"><%= f.file_field :profile_image, accept: "image/*" %></div>
      </div>
    </div>
    
    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :family_name, "氏名" %></div>
        <div class="col-lg-3"><%= f.text_field :family_name, autofocus: true, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :nickname, "ニックネーム" %></div>
        <div class="col-lg-3"><%= f.text_field :nickname, autofocus: true, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-lg-3"><%= f.email_field :email, autocomplete: "email", class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= f.submit "編集内容を保存", class: 'btn btn-success', style: 'width:300px' %>
            <%= link_to "退会する", users_quit_path, class: 'btn ml-5 btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>