<h1>いいね一覧</h1>
  <div class="post-detail py-5 bg-light">
    <div class="container">
      <div class="card mx-auto mt-4 shadow-lg">
      <% @favorite_posts.each do |post|%>
        <img class="card-img-top">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image, size: "1108x600" %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <img class="mt-3 rounded-circle"><%= image_tag post.user.get_profile_image(100,100) %>
            </div>
            <div class="mb-4 col-10">
              <p class="card-title">
                <a class="text-dark">タイトル：<%= post.title %></a>
              </p>
              <p class="card-text">説明文：<%= post.body %></p>
              <span>ユーザーネーム：<%= @user.nickname %></span>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>