<div class="container">
  <div class="row">
    <h2>ハッシュタグ #<%= @tag.tag_name %></h2>
    <div>
      <% @posts.each do |post| %>
        <div class="mb-4 border">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image, size: "600x300" %>
          <% end %>
          <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(50,50) %></p>
          <p>タイトル：<%= post.title %></p>
          <p>説明：<%= post.body %></p>
          <p>ユーザーネーム：<%= post.user.nickname %></p>
          <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
