<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <% @posts.each do |post| %>
    <img class="card-img-top">
      <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image, size: "950x600" %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <img class="mt-3 rounded-circle"><%= image_tag post.user.get_profile_image(100,100) %>
          </div>
          <div class="mb-4 col-10">
            <p class="card-title">
              <a class="text-dark">タイトル：<%= post.title %></a>
            </p>
            <p class="card-text">説明文：<%= post.body %></p>
            <span>ユーザーネーム：<%= post.user.nickname %> | </span>
            <span>
              <%= link_to "#{post.favorites.count} いいね", post_path(post.id) %> | 
            </span>
            <span>
              <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
            </span>
            <p>投稿日：<%= post.created_at.strftime('%Y/%m/%d') %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>