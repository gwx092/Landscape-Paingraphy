<div class="container">
  <div class="row">
    <%= form_with model: @post do |f| %>
      <div class="form-group">
        <div class="row">
          <div class="col-lg-3"><%= f.label :image, "画像" %></div>
          <div class="col-lg-1"></div>
          <div class="col-lg-3"><%= f.file_field :image, id:"post-image" %></div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-lg-3"><%= f.label :title, "タイトル" %></div>
          <div class="col-lg-1"></div>
          <div class="col-lg-3"><%= f.text_field :title, class: "form-control border-dark", style: 'width:300px' %></div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-lg-3"><%= f.label :body, "説明文" %><br><%= f.label :body, "(#を先頭につけるとハッシュタグになります)" %></div>
          <div class="col-lg-1"></div>
          <div class="col-lg-3"><%= f.text_area :body, class: "form-control border-dark", style: 'width:300px' %></div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-3"></div>
        <div class="col-lg-5 mt-3 mb-5"><%= f.submit '投稿', class: 'btn mt-4 mb-4 btn-primary', style: 'width:160px' %></div>
      </div>
    <% end %>
  </div>
</div>
